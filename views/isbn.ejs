<%- include('./layouts/header') %>
    <% var getdata; %>
        <% (data.hasOwnProperty("book")) ? getdata=data.book : getdata=data.magazine %>
            <h2 class="font-medium flex justify-center py-12 mt-10 leading-tight text-4xl mt-0 mb-2 text-blue-600">
                ISBN: <%= getdata.isbn %>
            </h2>
            <div class="mx-8 my-12 bg-green-200 text-justify px-8">
                <div class="overflow-x-auto">
                    <div
                        class="min-w-screen min-h-screen bg-gray-100 flex items-center justify-center bg-gray-100 font-sans overflow-hidden">
                        <div class="w-full lg:w-5/6">
                            <div class="bg-white shadow-md rounded my-6">
                                <table class="min-w-max w-full table-auto">
                                    <thead>
                                        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                                            <th class="py-3 px-6 text-center">Author</th>
                                            <th class="py-3 px-6 text-center">Title</th>
                                            <th class="py-3 px-6 text-center">ISBN</th>
                                            <th class="py-3 px-6 text-center">Description</th>
                                            <th class="py-3 px-6 text-center">PublishedAt</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-gray-600 text-sm font-light">
                                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                                            <td class="py-3 px-3 text-left whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="mr-2">
                                                        <img class="w-6 h-6 rounded-full border-gray-200 border transform hover:scale-125"
                                                            src="https://randomuser.me/api/portraits/men/<%=Math.floor(Math.random()*90)%>.jpg" />
                                                    </div>
                                                    <span class="font-medium">
                                                        <%= getdata.authors %>
                                                    </span>
                                                </div>
                                            </td>
                                            <td class="py-3 px-3 text-center">
                                                <div class="flex items-center">
                                                    <span>
                                                        <%= getdata.title %>
                                                    </span>
                                                </div>
                                            </td>
                                            <td class="py-3 px-7 text-center">
                                                <span
                                                    class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs">
                                                    <%= getdata.isbn %>
                                                </span>
                                            </td>
                                            <td class="py-3 px-7 text-center">
                                                <span
                                                    class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs">
                                                    <%= getdata.description %>
                                                </span>
                                            </td>
                                            <td class="py-3 px-7 text-center">
                                                <span
                                                    class="bg-purple-200 text-purple-600 py-1 px-3 rounded-full text-xs">
                                                    <%= getdata.publishedAt %>
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./layouts/footer') %>